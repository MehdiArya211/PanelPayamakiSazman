@using Domain.Resources
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>@Config.SiteNameFa</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap RTL -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet">

    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        :root {
            --primary: #0d6efd;
            --primary-soft: rgba(13, 110, 253, 0.08);
            --bg-body: #f3f4f6;
            --bg-sidebar: #ffffff;
            --bg-navbar: #ffffff;
            --bg-card: #ffffff;
            --text-main: #111827;
            --text-muted: #6b7280;
        }

        body {
            font-family: system-ui, -apple-system, "Segoe UI", sans-serif;
            background-color: var(--bg-body);
            color: var(--text-main);
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background: var(--bg-sidebar);
            position: fixed;
            right: 0;
            top: 0;
            bottom: 0;
            border-left: 1px solid #e5e7eb;
            z-index: 1000;
            overflow-y: auto;
            transition: margin-right .3s;
        }

        .sidebar-header {
            font-weight: bold;
            font-size: 1rem;
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            gap: .5rem;
            padding: .55rem .85rem;
            border-radius: .7rem;
            text-decoration: none;
            margin: .2rem 0;
            font-size: .9rem;
            color: var(--text-main);
        }

            .sidebar-link:hover {
                background: var(--primary-soft);
                color: var(--primary);
            }

            .sidebar-link.active {
                background: var(--primary);
                color: #fff;
            }

        /* Main Layout */
        .main-content {
            margin-right: 250px;
            min-height: 100vh;
            transition: .3s;
        }

        @@media(max - width:768px) {
            .sidebar

        {
            margin-right: -250px;
        }

        .sidebar.show {
            margin-right: 0;
        }

        .main-content {
            margin-right: 0;
        }

        }

        .navbar {
            background: var(--bg-navbar);
            border-bottom: 1px solid #e5e7eb;
        }

        @RenderSection("Styles", false)
    </style>
</head>

<body class="dashboard-body" data-theme="light" data-color="blue">

    <!-- Sidebar -->
    <aside class="sidebar" id="sidebarMenu">
        <div class="sidebar-header text-center p-3 border-bottom">📩 پنل پیامکی</div>

        @* اینجا منوی جدیدت میاد — هرچی خواستی قرار می‌دهیم *@
        @await Html.PartialAsync("_Sidebar")
    </aside>

    <!-- Main -->
    <main class="main-content">

        <!-- Navbar -->
        <nav class="navbar px-3">
            <button class="btn btn-outline-secondary d-md-none me-2" id="btnToggleSidebar">
                <i class="bi bi-list"></i>
            </button>

            <h6 class="fw-bold mb-0">@ViewBag.Title</h6>

            <div class="ms-auto d-flex align-items-center gap-3">
                <button class="btn btn-light position-relative">
                    <i class="bi bi-bell fs-5"></i>
                </button>
            </div>
        </nav>

        <!-- Page Content -->
        <div class="p-4">
            @RenderBody()
        </div>

    </main>

    <!-- Global Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.getElementById("btnToggleSidebar")?.addEventListener("click", () => {
            document.getElementById("sidebarMenu")?.classList.toggle("show");
        });
    </script>

    @RenderSection("Scripts", false)
</body>
</html>
