@{
    Layout = "/Views/Shared/_AuthLayout.cshtml";
    ViewBag.Title = "تغییر رمز عبور";
}

<div class="col-md-4 col-md-offset-4">

    <form asp-action="ChangePassword" method="post">

        <div class="card card-login">
            <div class="card-header text-center" data-background-color="rose">
                <h4 class="card-title">تغییر رمز عبور</h4>
            </div>

            <div class="card-content">

                <p class="text-danger text-center">@ViewBag.Error</p>

                <input type="hidden" name="Username" value="@ViewBag.Username" />

                <div class="input-group">
                    <span class="input-group-addon"><i class="material-icons">lock</i></span>
                    <div class="form-group label-floating">
                        <label class="control-label">رمز فعلی</label>
                        <input type="password" name="CurrentPassword" value="@ViewBag.CurrentPassword"
                               class="form-control" required />
                    </div>
                </div>

                <div class="input-group">
                    <span class="input-group-addon"><i class="material-icons">vpn_key</i></span>
                    <div class="form-group label-floating">
                        <label class="control-label">رمز جدید</label>
                        <input type="password" name="NewPassword" class="form-control" required />
                    </div>
                </div>

            </div>

            <div class="footer text-center">
                <button class="btn btn-rose btn-wd btn-lg">ثبت رمز جدید</button>
            </div>

        </div>

    </form>
</div>
