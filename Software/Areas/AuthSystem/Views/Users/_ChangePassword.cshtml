@model DTO.User.UserChangePasswordDTO

<style>
    /* ========= Modal New Style ========= */

    .modal-content {
        border-radius: 16px !important;
        border: none !important;
        padding-top: 10px;
        box-shadow: 0 0 30px rgba(0,0,0,.12);
    }

    .form-control-custom {
        border-radius: 10px !important;
        border: 1px solid #d0d7de !important;
        padding: 8px 12px !important;
        transition: .2s;
    }

        .form-control-custom:focus {
            border-color: var(--primary) !important;
            box-shadow: 0 0 0 3px rgba(13,110,253,.18) !important;
        }

    .form-label.required::after {
        content: " *";
        color: red;
    }

    .btn-save {
        border-radius: 10px;
        font-weight: 600;
        padding: 10px 25px;
    }

        .btn-save i {
            margin-left: 6px;
        }

    /* دارک مود */
    body.dark .modal-content {
        background: #1f1f1f;
        color: #e5e5e5;
        border: 1px solid #333 !important;
    }

    body.dark .form-control-custom {
        background: #2a2a2a;
        color: #eee;
        border-color: #444 !important;
    }
</style>


<div class="modal-header border-0 pb-0">
    <h5 class="modal-title fw-bold">
        <i class="bi bi-key text-warning"></i>
        تغییر کلمه عبور برای:
        <span class="text-success">@ViewBag.FullName</span>
    </h5>

    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>


<div class="modal-body px-4">

    <div class="text-danger text-center">@ViewBag.Error</div>

    <form asp-action="ChangePassword"
          class="change-pass-form mt-3"
          onsubmit="return user.changePassword.save(event)">

        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-2"></div>

        <div class="row g-3">

            <!-- Password -->
            <div class="col-md-6">
                <label asp-for="Password" class="form-label required"></label>
                <input asp-for="Password" type="password" class="form-control form-control-custom" />
                <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
            </div>

            <!-- RePassword -->
            <div class="col-md-6">
                <label asp-for="RePassword" class="form-label required"></label>
                <input asp-for="RePassword" type="password" class="form-control form-control-custom" />
                <span asp-validation-for="RePassword" class="text-danger small d-block mt-1"></span>
            </div>

        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-4 btn-save">
                <i class="bi bi-check-circle"></i>
                تغییر کلمه عبور
            </button>
        </div>

    </form>

</div>
