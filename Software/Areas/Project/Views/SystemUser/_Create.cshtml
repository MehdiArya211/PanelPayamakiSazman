@model DTO.Project.User.SystemUserCreateDTO

<form asp-area="Project"
      asp-controller="SystemUser"
      asp-action="Create"
      class="create-form"
      onsubmit="return users.create.save(event)">

    @Html.AntiForgeryToken()

    <div class="row g-3">

        <div class="col-md-6">
            <label class="form-label required">نام کاربری</label>
            <input asp-for="UserName" class="form-control" required />
        </div>

        <div class="col-md-6">
            <label class="form-label required">رمز اولیه</label>
            <input asp-for="InitialPassword" class="form-control" required />
        </div>

        <div class="col-md-6">
            <label class="form-label required">نام</label>
            <input asp-for="FirstName" class="form-control" required />
        </div>

        <div class="col-md-6">
            <label class="form-label required">نام خانوادگی</label>
            <input asp-for="LastName" class="form-control" required />
        </div>

        <div class="col-md-6">
            <label class="form-label">کد ملی</label>
            <input asp-for="NationalCode" class="form-control" />
        </div>

        <div class="col-md-6">
            <label class="form-label required">موبایل</label>
            <input asp-for="MobileNumber" class="form-control" required />
        </div>

        <!-- فعلاً ساده: بدون انتخاب نقش و سوال امنیتی -->
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary px-4">
            <i class="bi bi-check-circle"></i> ذخیره
        </button>
    </div>

</form>
