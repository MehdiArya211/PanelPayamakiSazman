@{
    ViewData["Title"] = "تعرفه ارسال پیامک‌ها";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold">تعرفه ارسال پیامک‌ها</h4>

        <button class="btn btn-success"
                onclick="smsTariff.loadCreateForm()">
            <i class="bi bi-plus-circle"></i>
            افزودن تعرفه
        </button>
    </div>

    <div class="card">
        <div class="card-body">
        <table id="datatables" class="table table-hover table-striped align-middle">

                <thead>
                    <tr>
                        <th data-data="operator">اپراتور</th>
                        <th data-data="persianPricePerSegment">هزینه پیام فارسی</th>
                        <th data-data="englishPricePerSegment">هزینه پیام انگلیسی</th>
                        <th data-data="id">عملیات</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="smsTariffModal" tabindex="-1">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">تعرفه پیامک</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="smsTariffModalBody">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/areas/project/smstariff.js"></script>
}
