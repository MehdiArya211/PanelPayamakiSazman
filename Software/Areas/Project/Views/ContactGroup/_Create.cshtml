@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DTO.Project.ContactGroup.ContactGroupCreateDTO

<div class="modal-header border-0 pb-0 zbm-modal">
    <h5 class="modal-title fw-bold">
        <i class="bi bi-people text-primary"></i> افزودن گروه جدید
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body px-4 zbm-modal">

    <p class="text-muted small text-center mb-3">
        لطفاً فیلدهای لازم را تکمیل کنید.
    </p>

    <div class="error text-danger text-center mb-2"></div>

    <form asp-area="Project"
          asp-controller="ContactGroup"
          asp-action="Create"
          class="create-form"
          onsubmit="return contactGroup.create.save(event)">
        @Html.AntiForgeryToken()

        <div class="row g-3">
            <div class="col-12 col-md-6">
                <label class="zbm-label required">نام گروه</label>
                <input asp-for="Name" class="form-control zbm-control" required />
                <span asp-validation-for="Name" class="text-danger small d-block mt-1"></span>
            </div>

            <div class="col-12">
                <label class="zbm-label">توضیحات</label>
                <textarea asp-for="Description" rows="3" class="form-control zbm-control"></textarea>
                <span asp-validation-for="Description" class="text-danger small d-block mt-1"></span>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-4 zbm-btn-save">
                <i class="bi bi-check-circle"></i> ذخیره
            </button>
        </div>
    </form>
</div>
