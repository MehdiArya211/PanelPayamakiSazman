@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DTO.Project.RouteDefinition.RouteDefinitionListDTO

<form asp-area="Project"
      asp-controller="RouteDefinition"
      asp-action="Edit"
      class="edit-form">

    @Html.AntiForgeryToken()

    <input type="hidden" name="routeKey" value="@Model.RouteKey" />

    <div class="modal-header">
        <h5 class="modal-title">ویرایش Route (@Model.RouteKey)</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body">

        <div class="mb-3">
            <label class="form-label">Actions (هر کدام در یک خط)</label>
            <textarea class="form-control"
                      name="Actions"
                      rows="4">@string.Join("\n", Model.Actions)</textarea>
        </div>

        <div class="form-check">
            <input class="form-check-input"
                   type="checkbox"
                   name="RequiresFreshAuth"
                   value="true"
                   @(Model.RequiresFreshAuth ? "checked" : "") />
            <label class="form-check-label">
                نیاز به احراز هویت مجدد
            </label>
        </div>

        <div class="text-danger error mt-2"></div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-light" data-bs-dismiss="modal">انصراف</button>
        <button type="submit"
                class="btn btn-primary"
                onclick="route.edit.save(event)">
            ذخیره
        </button>
    </div>

</form>
