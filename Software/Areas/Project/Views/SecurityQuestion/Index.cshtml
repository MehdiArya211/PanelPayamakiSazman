@{
    ViewData["Title"] = "مدیریت سوالات امنیتی";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .search-card {
            background: var(--bg-sidebar);
            border-radius: 14px;
            border: 1px solid #e5e7eb;
            box-shadow: 0 4px 12px rgba(0,0,0,.06);
        }
    </style>
}

<div class="container-fluid">
    <h4 class="fw-bold mb-3">مدیریت سوالات امنیتی</h4>

    <!-- Search Box (در صورت نیاز بعداً فیلتر اضافه کن) -->
    <div class="search-card p-3 mb-4">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-bold">متن سوال:</label>
                <input type="text" id="filter_title" class="form-control" />
            </div>
        </div>

        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-primary" id="btnFilter">
                <i class="bi bi-search"></i> جستجو
            </button>

            <button class="btn btn-secondary" id="btnResetFilter">
                <i class="bi bi-x-circle"></i> پاک‌سازی
            </button>
        </div>
    </div>

    <div class="table-card">
        <h5 class="fw-bold mb-2">لیست سوالات امنیتی</h5>

        <div class="mb-3">
            <button class="btn btn-success" onclick="securityQuestion.create.loadForm()">
                <i class="bi bi-plus-circle"></i>
                ایجاد سوال جدید
            </button>
        </div>

        <table id="datatables" class="table table-hover table-striped align-middle">
            <thead>
                <tr>
                    <th>شناسه</th>
                    <th>متن سوال</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/areas/project/securityquestion.js"></script>
}
