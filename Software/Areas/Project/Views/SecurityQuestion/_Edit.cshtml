@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DTO.Project.SecurityQuestion.SecurityQuestionEditDTO

<div class="modal-header border-0 pb-0">
    <h5 class="modal-title fw-bold">
        <i class="bi bi-pencil-square text-primary"></i> ویرایش سوال امنیتی
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body px-4">

    <div class="error text-danger text-center mb-2"></div>

    <form asp-area="Project"
          asp-controller="SecurityQuestion"
          asp-action="Edit"
          class="edit-form"
          method="post"
          onsubmit="return securityQuestion.edit.save(event)">

        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="row g-3">

            <div class="col-12">
                <label class="form-label required">متن سوال</label>
                <input asp-for="Text" class="form-control" required />
                <span asp-validation-for="Text" class="text-danger small d-block mt-1"></span>
            </div>

        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-check-circle"></i> ذخیره تغییرات
            </button>
        </div>

    </form>
</div>
