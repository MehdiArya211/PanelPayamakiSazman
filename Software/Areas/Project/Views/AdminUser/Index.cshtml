@{
    ViewData["Title"] = "مدیریت کاربران";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-people-fill text-primary"></i>
            @ViewData["Title"]
        </h5>

        <button class="btn btn-primary btn-sm"
                onclick="adminUser.create.loadForm()">
            <i class="bi bi-person-plus"></i>
            افزودن کاربر جدید
        </button>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table id="adminUserTable" class="table table-striped table-bordered w-100">
                <thead>
                    <tr>
                        <th>شناسه</th>
                        <th>نام کاربری</th>
                        <th>نام و نام خانوادگی</th>
                        <th>شماره موبایل</th>
                        <th>کد ملی</th>
                        <th>وضعیت</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<!-- Modal برای کاربران مدیر -->
<div class="modal fade" id="adminUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="adminUserModalContent">
            <!-- محتوای modal اینجا لود می‌شود -->
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/libs/datatables/datatables.min.js"></script>
    <script src="~/areas/project/adminUser.js"></script>
}