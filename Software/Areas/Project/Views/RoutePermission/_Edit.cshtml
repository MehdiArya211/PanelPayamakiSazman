@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DTO.Project.RoutePermission.RoutePermissionFormViewModel

<div class="modal-header bg-info text-white">
    <h5 class="modal-title">
        <i class="bi bi-pencil-square"></i>
        ویرایش مجوز: <span class="route-key">@Model.EditModel.DisplayRouteKey</span>
    </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
</div>

<form asp-area="Project"
      asp-controller="RoutePermission"
      asp-action="Edit"
      id="editPermissionForm"
      class="needs-validation"
      novalidate>

    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="alert alert-danger d-none" id="editErrorAlert"></div>

        <!-- Route Key (غیرقابل ویرایش) -->
        <div class="mb-3">
            <label class="form-label fw-bold">Route Key</label>
            <div class="form-control bg-light">
                <code>@Model.EditModel.RouteKey</code>
                <input type="hidden" asp-for="EditModel.RouteKey" />
            </div>
            <div class="form-text">
                این فیلد به صورت خودکار از Route استخراج شده و قابل ویرایش نیست.
            </div>
        </div>

        <div class="row g-3">
            <!-- Actions (Multiple Select) -->
            <div class="col-md-8">
                <label class="form-label required">Actions مجاز</label>
                <select asp-for="EditModel.Actions"
                        asp-items="Model.AvailableActions"
                        class="form-select select2-multiple"
                        multiple="multiple"
                        style="width: 100%"
                        data-placeholder="Actionها را انتخاب کنید..."
                        required>
                </select>
                <span asp-validation-for="EditModel.Actions" class="text-danger small d-block mt-1"></span>
                <div class="form-text">
                    Actionهای مجاز برای این Route را انتخاب کنید. (می‌توانید چندگانه انتخاب کنید)
                </div>
            </div>

            <!-- Requires Fresh Auth -->
            <div class="col-md-4">
                <label class="form-label required">نیاز به احراز هویت تازه</label>
                <select asp-for="EditModel.RequiresFreshAuth"
                        asp-items="Model.FreshAuthOptions"
                        class="form-select"
                        required>
                </select>
                <span asp-validation-for="EditModel.RequiresFreshAuth" class="text-danger small d-block mt-1"></span>
                <div class="form-text">
                    در صورت فعال بودن، کاربر باید مجدداً احراز هویت شود.
                </div>
            </div>
        </div>

        <!-- Selected Actions Preview -->
        <div class="mt-3">
            <label class="form-label">پیش‌نمایش Actions انتخاب شده:</label>
            <div id="selectedActionsPreview" class="border rounded p-2 bg-light">
                @if (Model.EditModel.Actions != null && Model.EditModel.Actions.Any())
                {
                    foreach (var action in Model.EditModel.Actions)
                    {
                        <span class="badge bg-primary me-1 mb-1">@action</span>
                    }
                }
                else
                {
                    <span class="text-muted">هنوز Actionی انتخاب نشده است</span>
                }
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-light" data-bs-dismiss="modal">انصراف</button>
        <button type="submit" class="btn btn-info text-white" id="btnEdit">
            <i class="bi bi-save"></i> ذخیره تغییرات
        </button>
    </div>
</form>

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function() {
        // Initialize Select2 for multiple selection
        $('.select2-multiple').select2({
            theme: 'bootstrap4',
            width: '100%',
            placeholder: 'Actionها را انتخاب کنید...',
            allowClear: true
        });

        // Update preview when selection changes
        $('.select2-multiple').on('change', function() {
            updateSelectedActionsPreview();
        });

        // Initialize validation
        $('#editPermissionForm').validate({
            rules: {
                'EditModel.Actions': {
                    required: true,
                    minlength: 1
                },
                'EditModel.RequiresFreshAuth': {
                    required: true
                }
            },
            messages: {
                'EditModel.Actions': {
                    required: "حداقل یک Action باید انتخاب شود",
                    minlength: "حداقل یک Action باید انتخاب شود"
                },
                'EditModel.RequiresFreshAuth': {
                    required: "وضعیت Requires Fresh Auth الزامی است"
                }
            },
            errorClass: "is-invalid",
            validClass: "is-valid",
            errorElement: "div"
        });
    });

    function updateSelectedActionsPreview() {
        var selected = $('.select2-multiple').select2('data');
        var preview = $('#selectedActionsPreview');

        if (selected.length > 0) {
            var badges = selected.map(function(item) {
                return '<span class="badge bg-primary me-1 mb-1">' + item.text + '</span>';
            }).join('');
            preview.html(badges);
        } else {
            preview.html('<span class="text-muted">هنوز Actionی انتخاب نشده است</span>');
        }
    }
</script>