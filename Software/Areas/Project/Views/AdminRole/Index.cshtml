@{
    ViewData["Title"] = "مدیریت نقش‌ها";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-person-badge text-primary"></i>
            @ViewData["Title"]
        </h5>

        <button class="btn btn-primary btn-sm"
                onclick="adminRole.create.loadForm()">
            <i class="bi bi-plus-circle"></i>
            افزودن نقش جدید
        </button>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table id="adminRoleTable" class="table table-striped table-bordered w-100">
                <thead>
                    <tr>
                        <th>شناسه</th>
                        <th>نام نقش</th>
                        <th>توضیحات</th>
                        <th>وضعیت</th>
                       @*  <th>تعداد کاربران</th>
                        <th>تاریخ ایجاد</th>
                        <th>ایجاد کننده</th> *@
                        <th>عملیات</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<!-- Modal Container -->
<div class="modal fade" id="adminRoleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="adminRoleModalContent">
            <!-- محتوای modal اینجا لود می‌شود -->
        </div>
    </div>
</div>

<!-- Modal برای مجوزهای نقش -->
<div class="modal fade" id="adminRolePermissionsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content" id="adminRolePermissionsModalContent">
            <!-- محتوای modal اینجا لود می‌شود -->
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/libs/datatables/datatables.min.js"></script>
    <script src="~/areas/Project/adminrole.js"></script>
    <script src="~/areas/Project/rolepermission.js"></script>
}