@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DTO.Project.SmsManager.SmsFileSendViewModel

<div class="modal-header border-0 pb-0">
    <h5 class="modal-title fw-bold">
        <i class="bi bi-file-earmark-arrow-up text-warning"></i>
        ارسال پیامک از فایل CSV / Excel
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body px-4">

    <div class="error text-danger text-center mb-2"></div>

    <form asp-area="Project"
          asp-controller="AdminSms"
          asp-action="SendFile"
          enctype="multipart/form-data"
          class="file-form"
          onsubmit="return smsAdmin.file.save(event)">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label required">سرشماره</label>
            <select asp-for="SenderNumberId"
                    class="form-select zbm-control"
                    asp-items="(IEnumerable<SelectListItem>)ViewBag.SenderNumberOptions">
                <option value="">انتخاب کنید...</option>
            </select>
            <span asp-validation-for="SenderNumberId"
                  class="text-danger small d-block mt-1"></span>
        </div>

        <div class="mb-3">
            <label class="form-label required">فایل شماره‌ها</label>
            <input asp-for="File"
                   type="file"
                   class="form-control zbm-control" />
            <span asp-validation-for="File"
                  class="text-danger small d-block mt-1"></span>
            <small class="text-muted">
                فرمت‌های مجاز: CSV, Excel. هر ردیف شامل یک شماره.
            </small>
        </div>

        <div class="mb-3">
            <label class="form-label required">متن پیام</label>
            <textarea asp-for="Text"
                      rows="4"
                      class="form-control zbm-control"></textarea>
            <span asp-validation-for="Text"
                  class="text-danger small d-block mt-1"></span>
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-warning px-4">
                <i class="bi bi-check-circle"></i>
                ارسال از فایل
            </button>
        </div>
    </form>
</div>
