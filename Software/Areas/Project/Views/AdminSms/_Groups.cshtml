@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DTO.Project.SmsManager.SmsGroupSendDTO

<div class="modal-header border-0 pb-0">
    <h5 class="modal-title fw-bold">
        <i class="bi bi-people text-info"></i>
        ارسال پیامک به گروه‌های مخاطب
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body px-4">

    <div class="error text-danger text-center mb-2"></div>

    <form asp-area="Project"
          asp-controller="AdminSms"
          asp-action="SendGroups"
          class="groups-form"
          onsubmit="return smsAdmin.groups.save(event)">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label required">سرشماره</label>
            <select asp-for="SenderNumberId"
                    class="form-select zbm-control"
                    asp-items="(IEnumerable<SelectListItem>)ViewBag.SenderNumberOptions">
                <option value="">انتخاب کنید...</option>
            </select>
            <span asp-validation-for="SenderNumberId"
                  class="text-danger small d-block mt-1"></span>
        </div>

        <div class="mb-3">
            <label class="form-label required">گروه‌های مخاطب</label>
            <select asp-for="ContactGroupIds"
                    multiple
                    class="form-select zbm-control"
                    asp-items="(IEnumerable<SelectListItem>)ViewBag.ContactGroupOptions">
            </select>
            <span asp-validation-for="ContactGroupIds"
                  class="text-danger small d-block mt-1"></span>
            <small class="text-muted">برای انتخاب چند گروه، کلید Ctrl را نگه دارید.</small>
        </div>

        <div class="mb-3">
            <label class="form-label required">متن پیام</label>
            <textarea asp-for="Text"
                      rows="4"
                      class="form-control zbm-control"></textarea>
            <span asp-validation-for="Text"
                  class="text-danger small d-block mt-1"></span>
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-info px-4 text-white">
                <i class="bi bi-check-circle"></i>
                ارسال به گروه‌ها
            </button>
        </div>
    </form>
</div>
