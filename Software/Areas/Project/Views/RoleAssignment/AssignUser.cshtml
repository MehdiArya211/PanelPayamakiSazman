@model DTO.Project.RoleAssignment.RoleAssignmentUserFormViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "تخصیص نقش به کاربر";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .search-card {
            background: var(--bg-sidebar);
            border-radius: 14px;
            border: 1px solid #e5e7eb;
            box-shadow: 0 4px 12px rgba(0,0,0,.06);
        }
    </style>
}

<div class="container-fluid">

    <h4 class="fw-bold mb-3">تخصیص نقش به کاربر</h4>

    <div class="search-card p-3 mb-4">

        <form onsubmit="return roleAssignment.assignSingle(event)">

            <div class="row g-3">

                <!-- کاربر -->
                <div class="col-md-6">
                    <label class="form-label fw-bold required">کاربر</label>

                    <select asp-for="CreateModel.UserId"
                            class="form-select"
                            asp-items="Model.UserOptions"
                            required>
                        <option value="">انتخاب کاربر...</option>
                    </select>

                    <div class="small text-muted mt-1">
                        بعد از انتخاب کاربر، نقش‌های فعلی نمایش داده می‌شود.
                    </div>
                </div>

                <!-- نقش -->
                <div class="col-md-6">
                    <label class="form-label fw-bold required">نقش</label>

                    <select asp-for="CreateModel.RoleId"
                            class="form-select"
                            asp-items="Model.RoleOptions"
                            required>
                        <option value="">انتخاب نقش...</option>
                    </select>

                    <div class="small text-muted mt-1">
                        این انتخاب برای «افزودن نقش تکی» استفاده می‌شود.
                    </div>
                </div>

            </div>

            <div class="mt-3 d-flex gap-2">

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i>
                    افزودن نقش به کاربر
                </button>

                <button type="button"
                        class="btn btn-primary"
                        onclick="roleAssignment.replaceAll()">
                    <i class="bi bi-check-circle"></i>
                    ذخیره نهایی نقش‌ها (Replace)
                </button>

                <button type="button"
                        class="btn btn-secondary"
                        onclick="roleAssignment.clearSelected()">
                    <i class="bi bi-x-circle"></i>
                    پاک‌سازی انتخاب‌ها
                </button>

            </div>

        </form>

    </div>

    <div class="table-card">

        <h5 class="fw-bold mb-2">نقش‌های کاربر</h5>

        <div class="alert alert-warning">
            🔸 دکمه «افزودن نقش» فقط یک نقش اضافه می‌کند. <br />
            🔸 دکمه «Replace» کل نقش‌های کاربر را جایگزین می‌کند.
        </div>

        <table class="table table-hover table-striped align-middle">
            <thead>
                <tr>
                    <th>نام نقش</th>
                    <th style="width:140px">عملیات</th>
                </tr>
            </thead>
            <tbody id="user-roles-body">
                <!-- با JS پر می‌شود -->
            </tbody>
        </table>

    </div>

</div>

@section Scripts {
    <script src="~/areas/project/roleassignment.js" asp-append-version="true"></script>
}
