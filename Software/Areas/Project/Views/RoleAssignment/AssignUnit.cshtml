@{
    ViewData["Title"] = "تخصیص نقش به واحد سازمانی";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .search-card {
            background: var(--bg-sidebar);
            border-radius: 14px;
            border: 1px solid #e5e7eb;
            box-shadow: 0 4px 12px rgba(0,0,0,.06);
        }
    </style>
}

<div class="container-fluid">

    <h4 class="fw-bold mb-3">تخصیص نقش به واحد سازمانی</h4>

    <div class="search-card p-3 mb-4">
        <div class="row g-3">

            <div class="col-md-6">
                <label class="form-label fw-bold">واحد سازمانی</label>
                <select id="unitId" class="form-select"></select>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">نقش</label>
                <select id="unitRoleId" class="form-select"></select>
            </div>

        </div>

        <div class="mt-3">
            <button class="btn btn-success" onclick="roleAssignment.assignToUnit()">
                <i class="bi bi-check-circle"></i>
                تخصیص نقش به واحد
            </button>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/areas/project/role-assignment.js" asp-append-version="true"></script>
}
