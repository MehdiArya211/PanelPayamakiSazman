@using DTO
@model IEnumerable<UnitsDTO>

@{
    ViewData["Title"] = "پیام‌های ارسال‌شده / لیست یونیت‌ها";
}

<!-- Outbox -->
<section class="page-view" id="view-outbox">
    <div class="p-4">
        <div class="card shadow-sm">
            <div class="card-header fw-bold">لیست یونیت‌ها</div>
            <div class="card-body">
                <table id="smsTable" class="table table-striped table-bordered w-100">
                    <thead>
                        <tr>
                            <th>کد</th>
                            <th>نام</th>
                            <th>توضیحات</th>
                            <th>والد</th>
                            <th>وضعیت</th>
                            <th>جزئیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Code</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.ParentId</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">فعال</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">غیرفعال</span>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary"
                                                data-id="@item.Id"
                                                onclick="showDetails(this)">
                                            مشاهده
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#smsTable').DataTable({
                // اگر فایل زبان فارسی داری اینجا ست کن
                // "language": {
                //     "url": "/lib/datatables/fa.json"
                // }
            });
        });

        function showDetails(btn) {
            var id = $(btn).data('id');
            // اینجا هر جوری خواستی جزئیات رو از سرور بگیر (Ajax) یا مودال باز کن
            alert("جزئیات یونیت با Id = " + id);
        }
    </script>
}
