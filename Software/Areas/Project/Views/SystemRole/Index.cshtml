@{
    ViewData["Title"] = "مدیریت نقش‌ها";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>

        .search-card {
            background: var(--bg-sidebar);
            border-radius: 14px;
            border: 1px solid #e5e7eb;
            box-shadow: 0 4px 12px rgba(0,0,0,.06);
        }
    </style>
}
<div class="container-fluid">
    <h4 class="fw-bold mb-3">مدیریت نقش ها</h4>

    <!-- Search Box -->
    <div class="search-card p-3 mb-4">
        <!-- Filter Card -->
        <div class="filter-card p-3 mb-4">

            <div class="row g-3">

                <!-- فیلتر عنوان -->
                <div class="col-md-4">
                    <label class="form-label fw-bold">عنوان:</label>
                    <input type="text" id="filter_title" class="form-control">
                </div>

            </div>

            <!-- Buttons -->
            <div class="mt-3 d-flex gap-2">

                <button class="btn btn-primary" id="btnFilter">
                    <i class="bi bi-search"></i>
                    جستجو
                </button>

                <button class="btn btn-secondary" id="btnResetFilter">
                    <i class="bi bi-x-circle"></i>
                    پاک‌سازی
                </button>

            </div>
        </div>

    </div>
    <div class="table-card">
        <h5 class="fw-bold mb-2">لیست نقش ها</h5>

        <div class="mb-3">
            <button class="btn btn-success" onclick="systemrole.create.loadForm()">
                <i class="bi bi-plus-circle"></i> نقش جدید
            </button>
        </div>
        <table id="datatables" class="table table-striped">
            <thead>
                <tr>
                    <th>شناسه</th>
                    <th>نام نقش</th>
                    <th>توضیحات</th>
                    <th>وضعیت</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/areas/project/systemrole.js"></script>
}
