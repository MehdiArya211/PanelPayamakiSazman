@{
    ViewData["Title"] = "مدیریت مجوزهای نقش";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var roleName = ViewBag.RoleName as string;
}

@section Styles {
    <style>
        .search-card {
            background: var(--bg-sidebar);
            border-radius: 14px;
            border: 1px solid #e5e7eb;
            box-shadow: 0 4px 12px rgba(0,0,0,.06);
        }
    </style>
}

<div class="container-fluid">

    <h4 class="fw-bold mb-3">مدیریت گروهی مجوزهای نقش</h4>

    <!-- ------------------ SEARCH BOX ------------------ -->
    <div class="search-card p-3 mb-4">
        <div class="row g-3">

            <div class="col-md-6">
                <label class="form-label fw-bold">نام نقش:</label>
                <input type="text" id="roleName" class="form-control" value="@roleName" readonly />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">فیلتر RouteKey:</label>
                <input type="text" id="filter_routeKey" class="form-control" />
            </div>

        </div>

        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-primary" id="btnFilter">
                <i class="bi bi-search"></i> جستجو
            </button>

            <button class="btn btn-secondary" id="btnResetFilter">
                <i class="bi bi-x-circle"></i> پاک‌سازی
            </button>
        </div>
    </div>

    <div class="table-card">

        <h5 class="fw-bold mb-2">لیست مجوزها</h5>

        <div class="mb-3 d-flex gap-2">
            <button class="btn btn-success" onclick="rolePermission.addRow()">
                <i class="bi bi-plus-circle"></i> افزودن مجوز
            </button>

            <button class="btn btn-primary" onclick="rolePermission.save()">
                <i class="bi bi-check-circle"></i> ذخیره گروهی
            </button>
        </div>

        <form id="permissionForm">
            @Html.AntiForgeryToken()

            <table class="table table-hover table-striped align-middle">
                <thead>
                    <tr>
                        <th style="width:25%">RouteKey</th>
                        <th>Actions (با کاما جدا شود)</th>
                        <th style="width:10%">عملیات</th>
                    </tr>
                </thead>
                <tbody id="permission-body"></tbody>
            </table>
        </form>

    </div>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/areas/project/rolepermission.js"></script>
}
