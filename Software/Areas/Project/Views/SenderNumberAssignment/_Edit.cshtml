@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DTO.Project.SenderNumberAssignment.SenderNumberAssignmentEditDTO

<form asp-area="Project"
      asp-controller="SenderNumberAssignment"
      asp-action="Edit"
      class="edit-form">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="modal-header">
        <h5 class="modal-title">ویرایش توضیحات تخصیص</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body">

        <div class="mb-3">
            <label class="form-label required">توضیحات</label>
            <textarea asp-for="Description"
                      class="form-control zbm-control"
                      rows="4"></textarea>
            <span asp-validation-for="Description"
                  class="text-danger small d-block mt-1"></span>
        </div>

        <div class="text-danger error"></div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-light" data-bs-dismiss="modal">انصراف</button>
        <button type="submit" class="btn btn-primary" onclick="senderAssignment.edit.save(event)">
            <i class="bi bi-check-lg"></i>
            ذخیره
        </button>
    </div>
</form>
