@{
    ViewData["Title"] = "تخصیص سرشماره‌ها";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-person-lines-fill"></i>
            تخصیص سرشماره‌ها به کاربران
        </h5>

        <button type="button"
                class="btn btn-primary"
                onclick="senderAssignment.create.loadForm()">
            <i class="bi bi-plus-circle"></i>
            تخصیص جدید
        </button>
    </div>

    <div class="card-body">
        <table id="assignments-table" class="table table-striped table-bordered w-100">
            <thead>
                <tr>
                    <th>id</th>
                    <th>سرشماره</th>
                    <th>کاربر</th>
                    <th>وضعیت سرشماره</th>
                    <th>وضعیت تخصیص</th>
                    <th>تاریخ تخصیص</th>
                    <th>تاریخ لغو</th>
                    <th>علت لغو</th>
                    <th>توضیحات</th>
                    <th>عملیات</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="modal fade" id="base-modal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="modal-form">
            @* فرم‌های Create/Edit به صورت partial اینجا لود می‌شوند *@
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/areas/project/sendernumberassignments.js"></script>
}

