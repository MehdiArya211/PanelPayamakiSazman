@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DTO.Project.SenderNumberOrganizationLevel.SenderNumberOrganizationLevelEditDTO

<form asp-area="Project"
      asp-controller="SenderNumberOrganizationLevel"
      asp-action="Edit"
      class="edit-form">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="modal-header">
        <h5 class="modal-title">ویرایش رده سازمانی (@Model.Code)</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body">

        <div class="mb-3">
            <label class="form-label required">کد</label>
            <input class="form-control zbm-control"
                   asp-for="Code"
                   maxlength="2"
                   minlength="2"
                   required />
            <span asp-validation-for="Code" class="text-danger small d-block mt-1"></span>
        </div>

        <div class="mb-3">
            <label class="form-label required">عنوان</label>
            <input class="form-control zbm-control"
                   asp-for="Title"
                   required />
            <span asp-validation-for="Title" class="text-danger small d-block mt-1"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">توضیحات</label>
            <textarea class="form-control zbm-control"
                      asp-for="Description"
                      rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger small d-block mt-1"></span>
        </div>

        <div class="text-danger error"></div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-light" data-bs-dismiss="modal">انصراف</button>
        <button type="submit" class="btn btn-primary zbm-btn-save" onclick="orgLevel.edit.save(event)">
            <i class="bi bi-check-lg"></i>
            ذخیره
        </button>
    </div>

</form>
