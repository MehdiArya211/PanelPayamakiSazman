@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DTO.Project.SenderNumberOrganizationLevel.SenderNumberOrganizationLevelCreateDTO

<div class="modal-header border-0 pb-0 zbm-modal">
    <h5 class="modal-title fw-bold">
        <i class="bi bi-diagram-3 text-primary"></i> افزودن رده سازمانی جدید
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body px-4 zbm-modal">

    <p class="text-muted small text-center mb-3">
        لطفاً تمام فیلدهای ستاره‌دار را تکمیل کنید.
    </p>

    <div class="error text-danger text-center mb-2"></div>

    <form asp-area="Project"
          asp-controller="SenderNumberOrganizationLevel"
          asp-action="Create"
          class="create-form"
          onsubmit="return orgLevel.create.save(event)">
        @Html.AntiForgeryToken()

        <div class="row g-3">

            <div class="col-12 col-sm-6 col-lg-4">
                <label class="zbm-label required">کد</label>
                <input asp-for="code" class="form-control zbm-control" required />
                <span asp-validation-for="code"
                      class="text-danger small d-block mt-1"></span>
            </div>

            <div class="col-12 col-sm-6 col-lg-4">
                <label class="zbm-label required">عنوان</label>
                <input asp-for="title" class="form-control zbm-control" required />
                <span asp-validation-for="title"
                      class="text-danger small d-block mt-1"></span>
            </div>

            <div class="col-12">
                <label class="zbm-label">توضیحات</label>
                <textarea asp-for="description"
                          rows="3"
                          class="form-control zbm-control"></textarea>
                <span asp-validation-for="description"
                      class="text-danger small d-block mt-1"></span>
            </div>

        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-4 zbm-btn-save">
                <i class="bi bi-check-circle"></i> ذخیره اطلاعات
            </button>
        </div>

    </form>
</div>
