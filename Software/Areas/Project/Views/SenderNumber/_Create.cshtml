@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DTO.Project.SenderNumber.SenderNumberFormViewModel

<div class="modal-header border-0 pb-0 zbm-modal">
    <h5 class="modal-title fw-bold">
        <i class="bi bi-hash text-primary"></i> افزودن سرشماره جدید
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body px-4 zbm-modal">

    <p class="text-muted small text-center mb-3">
        لطفاً تمام فیلدهای ستاره‌دار را تکمیل کنید.
    </p>

    <div class="error text-danger text-center mb-2"></div>

    <form asp-area="Project"
          asp-controller="SenderNumber"
          asp-action="Create"
          class="create-form"
          onsubmit="return senderNumber.create.save(event)">
        @Html.AntiForgeryToken()

        <div class="row g-3">

            <!-- پیش‌شماره ثابت -->
            <div class="col-12 col-sm-6 col-lg-4">
                <label class="zbm-label required">پیش‌شماره ثابت</label>
                <input asp-for="CreateModel.FixedPrefix"
                       class="form-control zbm-control"
                       required />
                <span asp-validation-for="CreateModel.FixedPrefix"
                      class="text-danger small d-block mt-1"></span>
            </div>

            <!-- حوزه تخصصی سرشماره -->
            <div class="col-12 col-sm-6 col-lg-4">
                <label class="zbm-label required">حوزه تخصصی سرشماره</label>
                <select asp-for="CreateModel.SpecialtyId"
                        class="form-select zbm-control"
                        asp-items="Model.SpecialtyOptions"
                        required>
                    <option value="">انتخاب کنید...</option>
                </select>
                <span asp-validation-for="CreateModel.SpecialtyId"
                      class="text-danger small d-block mt-1"></span>
            </div>

            <!-- رده سازمانی سرشماره -->
            <div class="col-12 col-sm-6 col-lg-4">
                <label class="zbm-label required">رده سازمانی سرشماره</label>
                <select asp-for="CreateModel.OrganizationLevelId"
                        class="form-select zbm-control"
                        asp-items="Model.OrganizationLevelOptions"
                        required>
                    <option value="">انتخاب کنید...</option>
                </select>
                <span asp-validation-for="CreateModel.OrganizationLevelId"
                      class="text-danger small d-block mt-1"></span>
            </div>

            <!-- حوزه فرعی سرشماره -->
            <div class="col-12 col-sm-6 col-lg-4">
                <label class="zbm-label required">حوزه فرعی سرشماره</label>
                <select asp-for="CreateModel.SubAreaId"
                        class="form-select zbm-control"
                        asp-items="Model.SubAreaOptions"
                        required>
                    <option value="">انتخاب کنید...</option>
                </select>
                <span asp-validation-for="CreateModel.SubAreaId"
                      class="text-danger small d-block mt-1"></span>
            </div>

            <!-- وضعیت -->
            <div class="col-12 col-sm-6 col-lg-4">
                <label class="zbm-label required">وضعیت</label>
                <select asp-for="CreateModel.Status"
                        class="form-select zbm-control"
                        asp-items="Model.StatusOptions"
                        required>
                    <option value="">انتخاب کنید...</option>
                </select>
                <span asp-validation-for="CreateModel.Status"
                      class="text-danger small d-block mt-1"></span>
            </div>

            <!-- توضیحات -->
            <div class="col-12">
                <label class="zbm-label">توضیحات</label>
                <textarea asp-for="CreateModel.Description"
                          rows="3"
                          class="form-control zbm-control"></textarea>
                <span asp-validation-for="CreateModel.Description"
                      class="text-danger small d-block mt-1"></span>
            </div>

        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-4 zbm-btn-save">
                <i class="bi bi-check-circle"></i> ذخیره اطلاعات
            </button>
        </div>

    </form>
</div>
